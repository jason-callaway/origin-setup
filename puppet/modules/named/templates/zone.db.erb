$ORIGIN .
$TTL 1800 ; Default TTL: 30 Minutes
<%= $zone => IN SOA <%= $nameserver[0][0] =>  <%= $admin => (
                         <%= $serial => ; serial
                         60         ; refresh (1 minute)
                         15         ; retry (15 seconds)
                         1800       ; expire (30 minutes)
                         10         ; minimum (10 seconds)
                          )
<%=
$nameserver.map { |fqdn, addr|
  "\t\t\tNS\t#{fqdn}."
}.join("\n")
%>
;; prime the nameserver IP addresses for the app zone.
<%= 
$nameserver.map { |fqdn, addr |
  # add a line for each nameserver
  "#{fqdn}.\tIN\tA\t#{addr}"
}.join("\n")
%>

